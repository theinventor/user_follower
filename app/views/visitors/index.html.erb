<h1>Listing visitors</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @visitors.each do |visitor| %>
    <tr>
      <td><%= visitor.uuid %></td>
      <td><%= link_to 'Show', visitor %></td>
      <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
      <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

